                            <clipPath id="clip0_4953_50452">
                                <rect width="20" height="20" fill="white" transform="translate(0.260254 0.0668945)" />
                            </clipPath>
                        </defs>
                    </svg>


                </div>
                <input asp-for="Input.OldPassword" class="input-box-username" autocomplete="current-password" aria-required="true" placeholder=@sharedResource["TextPassword"] />
            </div>
            <label class="input-label">@sharedResource["CurrentPassword"]</label>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>

        <div class="personal-data-box">
            <div class="input-box-container">
                <div class="input-box-icon">
                    <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
<g clip-path="url(#clip0_4953_50453)">
<path d="M2.93262 8.60147C2.93262 8.60147 3.45753 8.60144 4.10503 8.60144H16.4154C17.0629 8.60144 17.5878 8.60144 17.5878 8.60144V18.567C17.5878 18.567 16.538 18.567 15.243 18.567H5.27745C3.98243 18.567 2.93262 18.567 2.93262 18.567V8.60147Z" stroke="#353E5C" stroke-width="1.5" stroke-linecap="square"/>
