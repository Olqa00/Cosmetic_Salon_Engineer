                        </g>
                        <defs>
                            <clipPath id="clip0_4953_50453">
                                <rect width="20" height="20" fill="white" transform="translate(0.260254 0.0668945)" />
                            </clipPath>
                        </defs>
                    </svg>


                </div>
                <input asp-for="Input.ConfirmPassword" class="input-box" autocomplete="current-password" aria-required="true" placeholder=@sharedResource["TextPassword"] />
            </div>
            <label class="input-label">@sharedResource["ConfirmNewPassword"]</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="button btn btn-info mt-3">@sharedResource["SaveChanges"]</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
