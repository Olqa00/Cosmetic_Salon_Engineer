@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<main class="main-site-container">
    <div class="row text-we-are-container">
        <a class="text-we-are">
            @sharedResource["HomeTitle"]
        </a>
    </div>
    <div class="row employee-of-the-month">
        <div class="text-employee-month-container">
            <a class="text-employee-month">
                @sharedResource["OurTreatmentsHome"]
            </a>
        </div>
    </div>
    <div class="row mt-5 carousel-container">
        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner" style="height: 100%">
                <div class="carousel-item active" style="background-image:url('/FrontImages/brwi_home_1.jpg'); height:100%; background-position: center;background-size: cover;">
                    
                </div>
                <div class="carousel-item" style="background-image:url('/FrontImages/wet_look2.jpg'); height:100%; background-position: center;background-size: cover;">
                </div>
                <div class="carousel-item" style="background-image:url('/FrontImages/paznokcie.jpg'); height:100%; background-position: center;background-size: cover;">
                </div>
                <div class="carousel-item" style="background-image:url('/FrontImages/depilacja_view.jpg'); height:100%; background-position: center;background-size: cover;">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="row mt-5 owner-container">
        <div class="col-md-6 owner-img" style="background-image:url('/FrontImages/Magda_Brulinska.jpg'); background-size: cover;height: 460px">
        </div>
        <div class="col-md-6 owner-text-container">
            <div class="row name-container">
                <a class="name-text">Magdalena Brulińska</a>
            </div>
            <div class="row position-container">
                <a class="position-text">@sharedResource["SalonOwner"]</a>
            </div>
            <div class="row description-container">
                <a class="description-text">@sharedResource["WithUsWonder"]</a>
            </div>
            <div class="row button-container">
                <a asp-action="AboutUs" class="button-meetus">@sharedResource["GetToKnowUs"] 😁</a>
            </div>
        </div>
    </div>
</main>

