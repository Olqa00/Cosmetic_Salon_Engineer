@page
@model ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <form id="change-password-form" class="profile-container gap-3" method="post">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="personal-data-box">
            <div class="input-box-container">
                <div class="input-box-icon">
                    <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g clip-path="url(#clip0_4953_50452)">
                            <path d="M2.93262 8.60144L17.5878 8.60144V18.567C17.5878 18.567 16.538 18.567 15.243 18.567H2.93262V17.6723V8.60144Z" stroke="#353E5C" stroke-width="1.5" stroke-linecap="square" />
