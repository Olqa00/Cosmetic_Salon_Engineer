@model Engineer_MVC.Models.WorkingHours
<main>
    <div class="row" style="margin: 25px;">
        <div class="col-md-3 d-flex align-items-center">
            <div class="navigation-container">
                <h2 class="navigation-header">@sharedResource["Navigation"]</h2>
                <div class="navigation-links">
                    <a asp-action="CalendarEmployee" class="navigation-link"> @sharedResource["Calendar"]</a>
                    <a asp-action="WorkingHoursEmployee" class="navigation-link active"> @sharedResource["WorkingHours"]</a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <form asp-action="NewWorkingHoursEmployee" class="profile-container gap-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">@sharedResource["StartDate"]</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@sharedResource["EndDate"]</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.UserId" />
                </div>


                <div class="form-group">
                    <input type="submit" value=@sharedResource["SaveChanges"] class="button btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</main>
