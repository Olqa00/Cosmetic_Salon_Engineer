@model List<Engineer_MVC.Models.ViewModels.AddTreatmentsViewModel>
<form method="post">
    <div>
        <h2>@sharedResource["AddTreatments"]</h2>
        @sharedResource["RemoveTreatments"] / @ViewBag.UserName.
    </div>
    <div>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].TreatmentId" />
                <input type="hidden" asp-for="@Model[i].TreatmentName" />
                <input type="checkbox" asp-for="@Model[i].Selected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].Selected">
                    @Model[i].TreatmentType @Model[i].TreatmentName
                </label>
            </div>
        }
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div>
        <input type="submit" value="Update" class="btn btn-primary"
               style="width:auto" />
        <a asp-action="UserList" asp-route-id="@ViewBag.userId"
           class="btn btn-primary" style="width:auto">@sharedResource["Cancel"]</a>
    </div>
</form>